<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:scaleType="fitCenter" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tagName"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/text_vertical_margin"
            android:layout_marginLeft="@dimen/text_horizontal_margin"
            android:layout_marginRight="@dimen/text_horizontal_margin"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:background="@color/text_background"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/text_size_dialog_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagName"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/text_horizontal_margin"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:layout_marginRight="@dimen/text_horizontal_margin"
            android:layout_marginBottom="@dimen/text_vertical_margin"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/text_size_dialog_base"
            android:background="@color/text_background"
            android:autoText="false" />

    </RelativeLayout>

</FrameLayout>